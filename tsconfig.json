{
  "compilerOptions": {
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
    "jsx": "preserve",
    "lib": ["ESNext", "DOM"],
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "~/*": ["src/*"],
      "~core/*": ["src/core/*"],
      "vitepress-theme-ansidev": ["src/index.ts"]
    }
  },
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "module": "NodeNext",
    }
  },
  "include": ["src", "demo/.vitepress/theme"],
  "exclude": ["node_modules"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
