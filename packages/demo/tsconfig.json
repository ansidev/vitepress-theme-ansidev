{
  "compilerOptions": {
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "outDir": "dist",
    "esModuleInterop": true,
  },
  "include": [
    ".vitepress/**/*.ts",
    "**/*.ts",
    "**/*.vue",
    "**/*.md",
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".vitepress/cache"
  ],
  "vueCompilerOptions": {
    "vitePressExtensions": [".md"],
  }
}
